root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_style = tab

[*.css]
indent_style = tab

[*.html]
indent_style = tab

[*.json]
indent_style = tab

[*.code-snippets]
indent_style = tab
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
